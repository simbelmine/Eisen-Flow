<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="false"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    card_view:cardMaxElevation="0dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    card_view:cardBackgroundColor="@color/transparent"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:selectableItemBackground"
    card_view:contentPaddingTop="2dp"
    card_view:contentPaddingBottom="2dp"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffebeff1"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="8dp"
            android:background="#ffffeb3b"
            android:id="@+id/audio_object_shareview"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_menu_share"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="8dp"
            android:weightSum="1"
            android:background="#ffebeff1"
            android:id="@+id/audio_object_mainview"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/list_img"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/firstQuadrant"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/list_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/list_img"
                android:text="some text"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:gravity="center_vertical"
                />

        </LinearLayout>

    </RelativeLayout>

