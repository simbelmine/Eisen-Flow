<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/task_card_priority_0"
    android:visibility="gone"
    >

    <LinearLayout
        android:id="@+id/timer_list_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/secondQuadrant"
        android:layout_alignParentRight="true"
        android:gravity="right|center_vertical"
        android:clickable="true"
        >
        <ImageView
            android:layout_width="@dimen/card_under_icon_size"
            android:layout_height="@dimen/card_under_icon_size"
            android:layout_margin="@dimen/card_under_icon_margin"
            android:src="@mipmap/stopwatch"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/edit_list_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/thirdQuadrant"
        android:gravity="right|center_vertical"
        android:layout_toLeftOf="@+id/timer_list_icon"
        android:clickable="true"
        >
        <ImageView
            android:layout_width="@dimen/card_under_icon_size"
            android:layout_height="@dimen/card_under_icon_size"
            android:layout_margin="@dimen/card_under_icon_margin"
            android:src="@mipmap/pencil"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/delete_list_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/firstQuadrant"
        android:gravity="right|center_vertical"
        android:layout_toLeftOf="@+id/edit_list_icon"
        android:clickable="true"
        >
        <ImageView
            android:layout_width="@dimen/card_under_icon_size"
            android:layout_height="@dimen/card_under_icon_size"
            android:layout_margin="@dimen/card_under_icon_margin"
            android:src="@mipmap/trash"/>
    </LinearLayout>
</RelativeLayout>