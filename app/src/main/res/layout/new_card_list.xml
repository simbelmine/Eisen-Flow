<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    card_view:cardMaxElevation="1dp"
    android:layout_marginLeft="@dimen/card_view_margin"
    android:layout_marginRight="@dimen/task_standard_margin"
    card_view:cardBackgroundColor="@color/white"
    android:clickable="true"
    android:focusable="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:background="@color/white"
        >
        <!-- **************  Date Layout  ******************** -->
        <LinearLayout
            android:id="@+id/list_cal_date"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_marginLeft="@dimen/task_standard_margin"
            >
            <TextView
                android:id="@+id/card_day_of_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28"
                android:textSize="25sp"
                android:textColor="@color/date"
                />
            <TextView
                android:id="@+id/card_day_of_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tue"
                android:textColor="@color/date"
                />
        </LinearLayout>

        <!-- **************  DELETE - ACTION  ******************** -->
        <RelativeLayout
            android:id="@+id/delete_action_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/list_item_bg"
            android:layout_toRightOf="@+id/list_cal_date"
            android:foreground="?attr/selectableItemBackground"
            >
            <ImageView
                android:id="@+id/action_delete_icon"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/delete"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                />
            <ImageView
                android:id="@+id/right_action_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7dp"
                />
        </RelativeLayout>

        <!-- **************  UNDO - UNDO  ******************** -->
        <RelativeLayout
            android:id="@+id/deleted_undo_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/list_item_bg"
            android:layout_toRightOf="@+id/list_cal_date"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/undo_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="undo"
                android:textAllCaps="true"
                android:textColor="@color/firstQuadrant"
                />
            <TextView
                android:id="@+id/action_undo_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="undo"
                android:textAllCaps="true"
                android:textColor="@color/firstQuadrant"
                />
        </RelativeLayout>

        <!-- **************  CARD CONTENT  ******************** -->
        <LinearLayout
            android:id="@+id/task_card_mainview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/secondQuadrant"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_toRightOf="@+id/list_cal_date"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/task_standard_margin"
                android:gravity="bottom"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/list_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Release Main Project 2.1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/task_time_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="May 2, 16:00"
                    android:textColor="@color/white"
                    android:layout_below="@+id/list_text"
                    />

                <TextView
                    android:id="@+id/task_p1_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/card_padding"
                    android:layout_marginLeft="@dimen/card_padding"
                    android:textColor="@color/white"
                    android:text=""
                    android:visibility="invisible"
                    />

                <ImageView
                    android:id="@+id/done_divider"
                    android:layout_width="wrap_content"
                    android:layout_height="1.4dp"
                    android:background="@color/white"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="8dp"
                    android:layout_above="@+id/task_time_txt"
                    android:layout_marginRight="@dimen/card_padding"
                    android:visibility="visible"
                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>