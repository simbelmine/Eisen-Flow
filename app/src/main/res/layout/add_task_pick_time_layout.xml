<?xml version="1.0" encoding="utf-8"?>

<!-- Cal-Time Layout START -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pick_date_time_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@+id/priority_divider"
    android:layout_marginTop="@dimen/task_standard_margin"
    >
    <!-- Cal-Time Txt Layout START -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="bottom"
        >
        <ImageView
            android:id="@+id/clock_icon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/task_icon_size"
            android:src="@mipmap/clock_b"
            />
        <LinearLayout
            android:id="@+id/cal_txt_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/clock_icon"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/add_task_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/task_font_size"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:text="Fri, May 27, 2016"
                />
            <ImageView
                android:id="@+id/arrow_cal"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_arrow_up"
                android:layout_toRightOf="@+id/add_task_date_txt"
                />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/time_txt_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/cal_txt_layout"
            >
            <ImageView
                android:id="@+id/arrow_time"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_arrow_up"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/task_standard_margin"
                />
            <TextView
                android:id="@+id/add_task_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:text="07:41"
                android:layout_toLeftOf="@+id/arrow_time"
                />
        </RelativeLayout>
    </RelativeLayout>
    <!-- Cal-Time Txt Layout END -->
    <LinearLayout
        android:id="@+id/add_task_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:clickable="true"
        >
        <CalendarView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/curr_date_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/task_name_buttons_height"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:clickable="true"
        android:visibility="gone"
        android:textSize="18sp"
        android:background="?attr/selectableItemBackgroundBorderless"
        />
    <LinearLayout
        android:id="@+id/add_task_time_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        >
        <TimePicker
            android:id="@+id/add_task_time_picker_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
</LinearLayout>
    <!-- Cal-Time Layout END -->